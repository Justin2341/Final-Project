import java.util.Scanner;

public class Assignment
{
    String due;
    String name;
    String subject;

    public Assignment() {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter the subject of your assignment: ");
        subject = input.nextLine();
        System.out.println("Enter the name of your assignment: ");
        name = input.nextLine();
        System.out.println("Enter the due date in the form mm/dd/yyyy: ");
        due = input.nextLine();
    }
    public String toString()
    {
        return "Subject: " + subject + "\n" + "Name: " + name + "\n" + "Due date: " + due + "\n";
    }
}
